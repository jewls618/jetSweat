<%= render 'layouts/header' %>

<h1>ADD A COMMENT:</h1>

<div class="new-wokrout">
  <div class="form">

    <%= form_for [@workout, @comment] do |f| %>
      <%= f.label :body, "*Comment:" %>
      <%= f.text_field :body, autofocus: true %>
      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :workout_id %>

      <%= f.submit "Add Comment", class: "submit" %>
   <% end %>
   <p class="required">*required</p>
  </div>
</div>
