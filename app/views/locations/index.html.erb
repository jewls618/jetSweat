<%= render 'layouts/header' %>
<%= render 'layouts/searchbar' %>

<div class="picture-layout">
  <ul id="rig">
    <% @locations.each do |l| %>
      <li>
        <a class="rig-cell" href="/locations/<%= l.id %>/categories">
          <% if l.photo %>
            <%= image_tag(l.photo, class: "rig-img") %>
          <% end %>
          <span class="rig-overlay"></span>
          <span class="rig-text"><%= l.city %></span>
        </a>
      </li>
    <% end %>
  </ul>
</div>
